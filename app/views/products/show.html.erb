<main>
  <div class="container py-5">
  <div class="card-product row">
    <div class="col-12 col-md-8">
      <figure class="img-product">
        <%= image_tag @product.image_url, alt: "photo produit" %>
      </figure>
    </div>
    <div class="col-12 col-md-4">
      <div class="card-product-infos">
        <h1><%=@product.name %></h1>
        <h2><%=@product.shop.brand_name %></h2>
        <p class="price-product"><strong><%= @product.price  %>€</strong></p>
        <p class="border-top border-dark py-3"><%= @product.description %></p>
        <div class="card-cart" data-controller='add-to-cart'>
          <div class="actions">
            <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
            <span id="counter" data-count="1"  data-add-to-cart-target="counter">1</span>
            <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
          </div>
          <%= link_to "Ajouter au panier", product_path(@product), class: "mt-4 btn btn-primary", :"data-toggle" => "modal", :"data-target" => "#exampleModal" %>
        </div>
      </div>
    <%# MODAL %>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-check-circle"></i>Ajouté au panier</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
             <div class="product-cart">
              <figure>
                <%= image_tag @product.image_url, alt: "photo product" %>
              </figure>
               <ul>
                 <li><strong><%= @product.name %></strong></li>
                 <li><%= @product.category %></li>
                 <li id="modal-quantity">1</li>
                 <li id="modal-price"><%= @product.price %></li>
               </ul>
             </div>
            </div>
            <div class="modal-footer">
              <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Continuer mes achats</button> %>
              <%= link_to "Continuer mes achats", products_path, class: "btn btn-secondary" %>
              <%= link_to "Valider ma commande", product_transactions_path(@product), method: :post, class: "btn btn-primary", :"data-action" => "click->add-to-cart#addCart", :"data-add-to-cart-target" =>"button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</main>
