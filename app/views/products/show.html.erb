<div class="card-product row">
  <div class="col-12 col-md-7">
    <div class="img-product">
      <%= image_tag @product.image_url, alt: "image-produit" %>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="card-product-infos">
      <h2> <%=@product.name %></h2>
      <h3><%=@product.shop.brand_name %></h3>
      <p><%= @product.price  %>€</p> <div class="h_line"></div>
      <p><%= @product.description  %></p>
      <div class="flex-between">
        <div class="actions">
          <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
          <span id="counter" data-count="1">1</span>
          <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
        </div>
      </div>
      <%= link_to "Ajouter au panier", product_transactions_path(@product), method: :post, class: "mt-3 btn btn-primary" %>
    </div>
  </div>
</div>

<div class="col-12 col-md4">
  <div class= "card-product border p-3 rounded">
    <div class="row justify-content-right">
      <%= image_tag @product.shop.logo_url, class: "rounded-circle", alt: "image-shop" %>
      <h3><%=@product.shop.brand_name %></h3>
    </div>
  </div>
</div>

<section class="products py-5">
  <div class= "container">
    <h3>Les clients ont aussi aimé</h3>
      <div class= "row mt-5">
        <% @products.each do |product| %>
          <div class="col-12 col-md-6 col-lg-3 mb-4">
            <%= link_to product_path(product), class: "link-product" do  %>
            <div class="card" >
              <%= image_tag product.image_url %>
              <div class="card-body">
                <h3 class="card-title"><%= product.name%></h3>
                <p class="card-text"><%= product.category%></p>
                <p class="card-text"><%= product.description.truncate(60) %></p>
                <p class="price"><strong><%= product.price %>€</strong></p>
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</section>
